<%- include('../includes/head.ejs') %>
    </head>
    
    <body>
	<div class="container">
		<div class="row">
			<div class="col-8 border mx-auto p-5 mt-5 shadow p-3 mb-5 bg-white rounded">		
                        <form action="/admin/postsignin" method="POST" class="">
                            <div class="form-group <% if (errorDetails.param === 'email') { %>has-error<% } %>"> 
                                <label for="name">Name:</label>                                                                             
                                <input type="text" name="name" id="name" class="form-control" value="" />
                            </div>                              
                            <div class="form-group <% if (errorDetails.param === 'password') { %>has-error<% } %>">                           
                                <label for="password">password:</label>                                                                       
                                <input type="password" name="password" id="password" class="form-control" value="<% if (editing) { %><%=user.password%><% } %>" />           
                                <% if (errorDetails.param === 'password') { %><span class="help-block">Please correct the error</span><% } %> 
                            </div>                              
    
                            <% if (editing) { %>                
                                <input type="hidden" value="<%=user._id%>" name="userId" />                                                   
                                <% } %>                     
                                    <button class="btn btn-primary " type="submit">Signin</button>                                            
                        </form>
			</div>
			</div>
			</div>
		</div>
	</body>
	</html>
