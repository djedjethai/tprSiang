<%- include('../includes/head.ejs') %>
<%- include('../includes/navigation.ejs') %>
    	</head>
    	<body>

<%- include('../includes/gridTop.ejs') %>
		<h1>Welcome to the CARS page</h1>
	
	<% if(hasCars){ %>

		<% console.log(cars) %>
		<div class="table-responsive">
			<table class="table table-hover">
	  		<thead><tr><th>Serie</th><th>Serie details</th><th>Engine</th><th>Grade</th><th>Price</th><th>Best seller</th><th>Action</th></tr></thead>
                        <%  cars.forEach((car) => { %>
                              	<tbody><tr>
					<td>
                                        	<img src=<%=car.picture%> style="width:100px" alt="pic car">
					</td>
					<td>
                                        	<%=car.serie%>
					</td>
					<td>
                                        	<%=car.serieDetails%>
					</td>
					<td>
                                        	<%=car.engine%>
					</td>
					<td>
                                        	<%=car.grade%>
					</td>
					<td>
                                        	<%=car.price%>
					</td>
					<td>
                                        	<%=car.bestSeller%>
					</td>
					<td>
                                        <a href="/admin/edit-car/<%= car._id %>/?edit=true" class="btn btn-success btn-xs">Edit</a>                               
                                        
                                        <a href="/admin/delete-car/<%= car._id %>/?edit=true" class="btn btn-danger btn-xs">Delete</a>                               
                                    	</td>

                                        <input type="hidden" name="carId" value="<%= car._id %>" />
                                </tr></tbody>
                                <% }) %>
			</table>
		</div>	
   	<% } else { %> 
            	<p>No car found</p>    
        <% } %>    
	
	<button class="btn btn-xs"><a href="/admin/add-car" class="btn btn-primary btn-xs">Add car</a></button>                               

<%- include('../includes/gridBottom.ejs') %>
	</body>
</html>
