<%- include('../includes/head.ejs') %>
<%- include('../includes/navigation.ejs') %>
    	</head>
    	<body>
<%- include('../includes/gridTop.ejs') %>
		<div>
			<h1>Welcome to the Edit-review page</h1>
			<form action="/admin/<% if (editing && !errorMessage) { %>edit-review/<%=review._id%><% } else { %>add-review<% } %>" method="POST" class="col-xs-8 col-sm-6 col-md-5">
                             	<div class="form-group">
                                    	<label for="name">Name:</label>
					<input type="text" name="name" id="name" class="form-control" value="<% if (editing) { %><%=review.name%><% } %>" />
				</div>
                                 <div class="form-group">
                                       	<label for="comment">Comment:</label>
                                       	<textarea name="comment" id="comment" class="form-control" row="5"><% if (editing) { %><%=review.comment%><% } %></textarea>
                               	</div>

 			<div class="form-group">
                                       	<label for="picture">Picture:</label>
					<input type="text" name="picture" id="picture" class="form-control" value="<% if (editing) { %><%=review.picture%><% } %>" />
			</div>
		
            	<% if (editing) { %>
                 	<input type="hidden" value="<%=review._id%>" name="reviewId" />
                            	<%= console.log(review._id) %>
                <% } %>
                        <button class="btn btn-primary" type="submit"><% if (editing && !errorMessage) { %>Update Review<% } else { %>Add Review<% } %></button>
            </form>
         </div>
<%- include('../includes/gridBottom.ejs') %>
</body>
</html>
